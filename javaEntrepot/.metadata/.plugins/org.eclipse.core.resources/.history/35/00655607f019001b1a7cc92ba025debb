package rudiment;

import java.util.Arrays;
import java.util.Scanner;

public class Text {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int m=sc.nextInt();
		int[] arr=new int[m];
		for(int i=0;i<m;i++)
		{
			arr[i]=sc.nextInt();
		}
		Arrays.sort(arr);
		int max=0;
		for(int i=0;i<m;i++)
		{
			int sum=0;
			if(m-i>n)
			{
				sum=arr[i]*n;
			}else
			{
				sum=arr[i]*(m-i);
			}
			//System.out.println(sum);
			if(sum>max)
			{
				max=sum;
			}
		}
		System.out.println(max);
	
	}
}

