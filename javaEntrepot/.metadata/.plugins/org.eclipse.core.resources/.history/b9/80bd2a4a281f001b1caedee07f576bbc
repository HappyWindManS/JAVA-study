package arrays;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.StreamTokenizer;

public class EX02 {

	public static void main(String[] args) throws IOException {
		// TODO 自动生成的方法存根
		StreamTokenizer st =new StreamTokenizer(new BufferedReader(new InputStreamReader(System.in)));
		st.nextToken();
		int length=(int)st.nval;
		st.nextToken();
		int num = (int)st.nval;
		
		double[][] array=new double[num][2];
		
		st.nextToken();
		array[0][0] = st.nval;
		st.nextToken();
		array[0][1] = st.nval;
		for(int i=1;i<num;i++)
		{
			st.nextToken();
			array[i][0] = st.nval;
			st.nextToken();
			array[i][1] = st.nval;
			
		}
		for(int i=0;i<num;i++)
		{
			for(int l=0;l<num;l++)
			{
				if(array[i][0]<array[l][1]&&array[l][0]<array[i][0]&&array[i][1]>array[l][1])
				{
					array[l][1] = array[i][1];
					array[i][1]=0;
					array[i][0]=0;
				}
			}
		}
		for(int i=0;i<num;i++)
		{
			if(array[i][1]!=0)
			length -= array[i][1]-array[i][0]+1;
		}
		System.out.print(length+1);
	}

}
