package arrays;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.StreamTokenizer;

public class EX02 {

	public static void main(String[] args) throws IOException {
		// TODO 自动生成的方法存根
		StreamTokenizer st =new StreamTokenizer(new BufferedReader(new InputStreamReader(System.in)));
		st.nextToken();
		int length=(int)st.nval;
		st.nextToken();
		int num = (int)st.nval;
		
		double[][] array=new double[num][2];
		
		st.nextToken();
		array[0][0] = st.nval;
		st.nextToken();
		array[0][1] = st.nval;
		for(int i=0;i<num;i++)
		{
			st.nextToken();
			double temp = st.nval;
			st.nextToken();
			double temp1 = st.nval;
			for(int l=0;l<i;l++)
			{
				if(temp<array[l][1]&&array[l][0]<temp)
				{
					if(temp1>array[l][1])
					{
						array[l][1] = temp1;
					}
				}
				else
				{
					array[i][0] =temp;
					array[i][1] =temp1;
				}
			}
		}
		for(int i=0;i<num;i++)
		{
			length -= array[i][1]-array[i][0]+1;
		}
		System.out.print(length);
	}

}
