package com.mr.chapter01;

public class HelloWorld {

	public static void main(String[] args) {
		// TODO 自动生成的方法存根
		int sum = 0;
		int time =0;
		int x = 0;
		int y = 0;
		int z =0;
		while(time != sum)
		{
			sum = x+y+z;
			time = 15*x+9*y+z;
			if(time < sum)
			{
				if(x<y)
				{
					x++;
				}
				else
				{
					z++; 
				}
			}
			else
			{
				z++;
			}
		}
		System.out.println("总价是%s,一共有%s只，公鸡有%s只，母鸡有%s只，小鸡有%s只",time,sum,x,y,z); ;
	}
}
