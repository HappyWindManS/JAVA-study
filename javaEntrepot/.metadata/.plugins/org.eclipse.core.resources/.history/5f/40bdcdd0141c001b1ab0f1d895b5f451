package arrays;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class EX03 {

	public static void main(String[] args){
		// TODO 自动生成的方法存根
		Scanner input = new Scanner(System.in);
		int timeLength =input.nextInt();
		int kind = input.nextInt();
		
		List<herb> list = new ArrayList<herb>();
		//输入数据信息
		for(int i=0;i<kind;i++)
		{
			int time=input.nextInt();
			int price=input.nextInt();
			if(time < timeLength)
			{
				herb temp = new herb(time,price); 
				list.add(temp);
			}
		}
		//选择权重最大的
		herb qz = new herb();
		boolean bool=true;
		int sum = 0;
		while(bool)
		{		
			for(herb temp:list)
			{				
				if(temp.getTime()<=timeLength)
				{
					if(temp.getTime()>qz.getTime())
					{	
						if(qz.getPrice()*(int)(temp.getTime()/qz.getTime())<temp.getPrice())
						{
							qz = temp;
						}
					}
					else if(temp.getPrice()*(int)(qz.getTime()/temp.getTime())>qz.getPrice())
					{
						qz = temp;
					}
				}
			}
			timeLength -= qz.getTime();
			sum += qz.getPrice();
			for(herb temp:list)
			{
				if(temp.getTime()<=timeLength)
				{
					bool = true;
					break;
				}
				else
				{
					bool =false;
				}
			}
		}
		System.out.print(sum);
	}
	
	public static class herb
	{
		herb()
		{}
	    herb(int time,int price)
		{
			setTime(time);
			setPrice(price);
		}
		
		private int time;
		
		private int price;

		public double getTime() {
			return time;
		}

		public void setTime(int time) {
			this.time = time;
		}

		public double getPrice() {
			return price;
		}

		public void setPrice(int price) {
			this.price = price;
		}
	}
}

