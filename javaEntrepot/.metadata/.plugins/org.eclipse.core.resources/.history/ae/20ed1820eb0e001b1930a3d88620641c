package chapter02;

public class Ex08 {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        int num = 19;
        if(num % 2 ==0){
        	//判断num是否能被2整除
        	System.out.println(num+"是一个偶数");
        }else{
        	//判断条件不成立，num不能被2整除
        	System.out.println(num+"是一个奇数");
        }
	}

}
