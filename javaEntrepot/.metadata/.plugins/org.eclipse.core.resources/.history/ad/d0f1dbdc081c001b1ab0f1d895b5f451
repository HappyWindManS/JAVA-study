package arrays;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.StreamTokenizer;

public class EX03 {

	public static void main(String[] args){
		// TODO 自动生成的方法存根
		Scanner input = new Scanner(System.in);
		int timeLength =input.nextInt();
		int kind = input.nextInt();
		
		List<herb> list = new ArrayList<herb>();
		//输入数据信息
		for(int i=0;i<kind;i++)
		{
			herb temp = new herb(input.nextInt(),input.nextInt()); 
			list.add(temp);
		}
		//选择权重最大的
		herb qz = new herb();
		boolean bool=true;
		int sum = 0;
		while(bool)
		{		
			for(herb temp:list)
			{
				if(qz.getPrice()<temp.price&&temp.getTime()<timeLength)
				{
					qz = temp;
				}
			}
			int temp =(int)(timeLength/qz.getTime());
			sum += temp*qz.getNum();
			timeLength = (int) (timeLength - temp*qz.getTime());
			qz = new herb();
			for(herb get:list)
			{
				if(timeLength>get.getTime())
				{
					bool = true;
					break;
				}
			}
		}
		System.out.print(sum);
	}
	
	public static class herb
	{
		herb()
		{}
	    herb(int time,int num)
		{
			setTime(time);
			setNum(num);
			setPrice(getTime()/getNum());
		}
		
		private int time;
		
		private int num;
		
		private double price;

		public double getTime() {
			return time;
		}

		public void setTime(int time) {
			this.time = time;
		}

		public double getNum() {
			return num;
		}

		public void setNum(int num) {
			this.num = num;
		}

		public double getPrice() {
			return price;
		}

		public void setPrice(double price) {

			this.price = price;
		}
	
	}
}

