package com.mr.chapter01;

import java.text.MessageFormat;

public class HelloWorld {

	public static void main(String[] args) {
		// TODO 自动生成的方法存根
		int sum = 1;
		int time =5;
		int x = 1;
		int y = 0;
		int z = 0;
		while(time != sum)
		{
			sum = x+y+z;
			time = 15*x+9*y+z;
			if(time < sum)
			{
				if(x<y)
				{
					x++;
				}
				else
				{
					y++; 
				}
			}
			else
			{
				z++;
			}
			System.out.println(MessageFormat.format("现在总价是{0},一共有{1}只，公鸡有{2}只，母鸡有{3}只，小鸡有{4}只",time,sum,x,y,z)); ;
		}
		System.out.println(MessageFormat.format("总价是{0},一共有{1}只，公鸡有{2}只，母鸡有{3}只，小鸡有{4}只",time,sum,x,y,z)) ;
	}
}
